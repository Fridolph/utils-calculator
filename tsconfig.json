{
  "include": [
    "src/**/*",
    "src/tests/**/*",       // 新增测试目录
    "src/__tests__/**/*",        // 添加 __tests__ 目录
    "src/tests/**/*",           // 保留原有 tests 目录
    "src/types/**/*"
  ],
  "compilerOptions": {
    "typeRoots": ["src/types", "./node_modules/@types"],  // 优先使用自定义类型
    "rootDir": ".",                                    // 根目录
    "outDir": "./dist",
    "module": "commonjs",
    "moduleResolution": "Node",
    "target": "es2021",
    "types": ["jest"],                                 // 确保jest类型
    "lib": ["ES2021", "DOM"],
    "esModuleInterop": true,
    "strict": true,
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "skipLibCheck": true
  }
}
